<p id="notice"><%= notice %></p>

<h1>Cartegories</h1>

<table>
  <thead>
    <tr>
      <th>Cart type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cartegories.each do |cartegory| %>
        <%@carts = Cartegory.where(parent_id:cartegory.id)%>
        <%unless @carts.empty?%>
          <td><strong><%= cartegory.name %><strong></td>
          <% @carts.each do |cart| %>
            <tr>
            <td><%= cart.name %></td>
            <td><%= link_to 'Show', cart %></td>
            <td><%= link_to 'Edit', edit_cartegory_path(cart) %></td>
            <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
         <%end%>
        <%else%>
          <% if cartegory.parent_id == 0 %>
          <td><strong><%= cartegory.name %><strong></td>
          <td><%= link_to 'Show', cartegory %></td>
          <td><%= link_to 'Edit', edit_cartegory_path(cartegory) %></td>
          <td><%= link_to 'Destroy', cartegory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cartegory', new_cartegory_path %>
